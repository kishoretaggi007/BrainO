<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homethemeb">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="15dp"
        android:weightSum="1">


        <TextView
            android:id="@+id/textViewD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nClear levels to earn coins.\n \nTap in ascending order &amp; descending order for Green colour &amp; Red colour respectively. \n \nMatrix increases with levels &amp; each level has unique number arrangement. \n \nNo. of coins for a sub level = Sub Level No.\n \nNo. of coins is restricted to unlock the next level.
            \n\nThe one-stop within the app is where you connect to internet to exchange coins earned.
            \n\n     25 silver coins   -  1 gold coin
            \n     50 gold coins    -   1 Gem
            \n     5 Gems              -   Rs 10/-
            \n\nAfter reaching a limit of Rs 100/- you can recharge using the earnings."
            android:textSize="17sp"
            tools:ignore="HardcodedText,InefficientWeight"
            android:layout_weight="1.50" />

    </LinearLayout>

    <TextView
        android:id="@+id/detailsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:background="#ffffff"
        android:text="   Details   "
        android:textSize="20sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <ImageButton
        android:id="@+id/imageBack"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:textSize="17sp"
        app:srcCompat="@drawable/backbutton"
        tools:ignore="ContentDescription" />

</RelativeLayout>